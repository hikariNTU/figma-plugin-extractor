{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "outDir": "dist",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "files": [
    "env.d.ts",
  ],
  "include": [
    "./src/**/*",
    "./script/**/*",
    "./temp/**/*"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/*.spec.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
}